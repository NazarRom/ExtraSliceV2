@using System.Security.Claims;
<h1>Perfil Doctor: @Context.User.Identity.Name</h1>
<ul class="list-group">
    <li class="list-group-item">
        Email: @Context.User.FindFirst("Email")
    </li>
    <li class="list-group-item">
        Salario: @Context.User.FindFirstValue("Direccion")
    </li>
</ul>
<h2>Todos los Claims</h2>
<ul>
    @foreach (Claim claim in Context.User.Claims)
    {
            <li>
            @claim.Type: <b>@claim.Value</b>
            </li>
    }
</ul>