@model List<Restaurante>

<div class="icon-container">
    <i class="fa-arrow-up"><img src="~/images/sushi.png" /><br />Sushi</i>
    <i class="fas fa-arrow-up"><img src="~/images/taco.png" /><br />Mexicana</i>
    <i class="fas fa-arrow-up"><img src="~/images/emparedado.png" /><br />Americana</i>
    <i class="fas fa-arrow-up"><img src="~/images/postre.png" /><br />Postres</i>
    <i class="fas fa-arrow-up"><img src="~/images/porcion-de-pizza.png" /><br />Pizza</i>
    <i class="fas fa-arrow-up"><img src="~/images/espaguetis.jpg" /><br />Italiana</i>
 

</div>
<div>
    <section class="carousel">
        <div class="carousel__container">



            <a asp-controller="Carta" asp-action="Restaurante" class="carousel--item">
                <img class="carousel--item__img"
                     src="https://images.pexels.com/photos/1200450/pexels-photo-1200450.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                     alt="item" />

                <div class="carousel--item__details">
                    <div>
                        <img src="../src/img/carousel--play.svg" alt="icon play" />
                        <img src="../src/img/carousel--plus.svg" alt="icon add" />
                    </div>

                    <p class="carousel--item__details--title">Titulo provisional</p>
                    <p class="carousel--item__details--subtitle">
                        2020 16+ 114 Minutos
                    </p>
                </div>
            </a>




            <a asp-controller="Carta" asp-action="Restaurante" class="carousel--item">
                <img class="carousel--item__img"
                     src="https://images.pexels.com/photos/1200450/pexels-photo-1200450.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                     alt="item" />

                <div class="carousel--item__details">
                    <div>
                        <img src="../src/img/carousel--play.svg" alt="icon play" />
                        <img src="../src/img/carousel--plus.svg" alt="icon add" />
                    </div>

                    <p class="carousel--item__details--title">Titulo provisional</p>
                    <p class="carousel--item__details--subtitle">
                        2020 16+ 114 Minutos
                    </p>
                </div>
            </a>



            <a asp-controller="Carta" asp-action="Restaurante" class="carousel--item">
                <img class="carousel--item__img"
                     src="https://images.pexels.com/photos/1200450/pexels-photo-1200450.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                     alt="item" />

                <div class="carousel--item__details">
                    <div>
                        <img src="../src/img/carousel--play.svg" alt="icon play" />
                        <img src="../src/img/carousel--plus.svg" alt="icon add" />
                    </div>

                    <p class="carousel--item__details--title">Titulo provisional</p>
                    <p class="carousel--item__details--subtitle">
                        2020 16+ 114 Minutos
                    </p>
                </div>
            </a>


        </div>
    </section>
</div>
<div class="filters">

    <div class="precios">
        <h1>Rango de precios</h1>
        <input type="range" id="range-input" min="0" max="100" step="1" value="50">
        <span id="range-value">50</span>
    </div>

    <div class="menu-filters">
        <form method="post">
            <h1>Ordenar</h1>
            <label>
                <input type="checkbox" name="filter" value="vegetarian"> Vegetariano
            </label>
            <label>
                <input type="checkbox" name="filter" value="vegan"> Vegano
            </label>
            <label>
                <input type="checkbox" name="filter" value="gluten-free"> Sin gluten
            </label>
            <label>
                <input type="checkbox" name="filter" value="spicy"> Picante
            </label>

        </form>
    </div>

    <div class="search-container">
        <form action="#">
            <input type="text" placeholder="Buscar...">
            <button type="submit">Buscar</button>
        </form>
    </div>
 
</div>

<div class="restaurantes elemento">
    @if (Model != null)
    {
        @foreach (Restaurante rest in Model)
        {
            <a asp-controller="Carta" asp-action="Restaurante" asp-route-idrestaurante="@rest.IdRestaurante" class="card grow">
                <img src="~/images/@rest.Imagen" />
                <div class="content">
                    <h3>@rest.Nombre_restaurante</h3>
                    <p>@rest.Direccion</p>
                </div>
            </a>
        }

    }
</div>



@section Scripts {
    <script>
   
        const rangeInput = document.getElementById('range-input');
        const rangeValue = document.getElementById('range-value');

        rangeInput.addEventListener('input', (event) => {
            rangeValue.innerHTML = event.target.value;
        });

    </script>
}

